{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist", 
    "rootDir": "./src", 
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
